<div class="jumbotron bg-primary text-center">
    <span class="display-4">Eat-Da-Burger</span>
</div>

<br>

<div class="row mx-auto">

    <div class="col mx-2 text-center">

        <span class="h4">Ready to Eat</span>

        <ul class="list-group text-left">
            {{#each data}}
            {{#unless devoured}}
            <li class="list-group-item">
                <span class="h5">{{burger_name}}</span>
                <button class="btn btn-primary devour-btn float-right" data-id="{{id}}"
                    data-devoured="{{devoured}}">Devour!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="col mx-2 text-center">

        <span class="h4">Already Eaten</span>

        <ul class="list-group text-left">
            {{#each data}}
            {{#if devoured}}
            <li class="list-group-item disabled">
                <span class="h5">{{burger_name}}</span>
            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>

<hr>

<footer class="footer mx-auto text-center">
    <form class="w-25 mx-auto">
        <div class="form-group">
            <input class="form-control form-control-lg" id="burger_name" type="text" name="burger_name">
        </div>

        <button class="btn btn-primary" id="add_burger" type="submit">Add a Burger</button>
    </form>
</footer>